{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "."
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "packages/*/src/**/*.vue",
    "packages/*/tests/**/*.vue",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
